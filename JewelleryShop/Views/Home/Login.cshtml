@model Customer
@{
    ViewData["Title"] = "Login Page";
}

<h1>User Login</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger">
                <div class="form-group">
                    <label asp-for="FirstName">User Name: </label>
                    <input asp-for="FirstName" class="username form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password: </label>
                    <input asp-for="Password" class="password form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" onclick="Login()" class="loginclick btn btn-primary">Login</button>
            
        </form>
    </div>
</div>

